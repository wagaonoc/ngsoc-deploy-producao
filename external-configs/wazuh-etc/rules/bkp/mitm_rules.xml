<!-- Mitmproxy local rules (isolated) -->
<group name="mitmproxy-rules">
  <!-- 101100: alerta genérico quando decoder mitmproxy-audit corresponder -->
  <rule id="101100" level="5">
    <decoded_as>mitmproxy-audit</decoded_as>
    <description>Mitmproxy: evento genérico detectado</description>
    <group>mitmproxy</group>
  </rule>

  <!-- 101101: exemplo de regra específica - conexão CONNECT -->
  <rule id="101101" level="7">
    <decoded_as>mitmproxy-audit</decoded_as>
    <match>CONNECT</match>
    <description>Mitmproxy: conexão CONNECT detectada</description>
    <group>mitmproxy</group>
  </rule>
</group>
