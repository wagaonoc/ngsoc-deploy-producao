<group name="mitmproxy-json-rules">
  <!-- regra genérica para mitmproxy quando a mensagem for JSON -->
  <rule id="101150" level="5">
    <decoded_as>mitmproxy-json</decoded_as>
    <description>Mitmproxy JSON: evento genérico detectado</description>
    <group>mitmproxy-rules</group>
  </rule>

  <!-- exemplo: regra para eventos CONNECT em mensagens JSON -->
  <rule id="101151" level="7">
    <decoded_as>mitmproxy-json</decoded_as>
    <match>CONNECT</match>
    <description>Mitmproxy JSON: conexão CONNECT detectada</description>
    <group>mitmproxy-rules</group>
  </rule>
</group>
